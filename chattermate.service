[Unit]
Description=Chattermate FastAPI Gunicorn App
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/chattermate.chat/backend
ExecStart=/home/ubuntu/chatenv/bin/gunicorn app.main:app \
  --workers 2 \
  --worker-class uvicorn.workers.UvicornWorker \
  --bind 0.0.0.0:8000

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
